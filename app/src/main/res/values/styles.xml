<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Da applicare a tutti i figli di base_report_fragment, layout_height in particolare deve essere wrap_content, altrimenti non scrolla -->
    <style name="scrollableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="sectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ms_bottom_navigation_bar_height</item>
        <item name="android:paddingLeft">@dimen/ms_material_button_padding_horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="sectionValue">
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="sectionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="history_item_title">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="history_item_desc">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="history_item_value">
        <item name="android:textColor">#222</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="history_item_size">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">#222</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="sectionParameterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/report_parameter_title_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="sectionButtonTitle" parent="sectionParameterTitle">
        <item name="android:paddingLeft">@dimen/ms_material_button_padding_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/grid_vertical_margin</item>
    </style>

    <style name="sectionSpinnerTitle" parent="sectionParameterTitle">
        <item name="android:layout_marginLeft">@dimen/ms_material_button_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/ms_material_button_padding_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spinner_padding_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="spinnerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/report_parameter_value_height</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/grid_vertical_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="toggleButtonsContainer">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/grid_vertical_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/grid_vertical_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/grid_vertical_margin</item>
        <item name="android:checked">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="sectionParameterValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/report_parameter_value_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="CustomToggleButton">

        <item name="android:background">@drawable/custom_toggle</item>
        <item name="android:textColor">@color/custom_toggle_text_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>
