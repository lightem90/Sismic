<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1" />

        <ProgressBar
            android:id="@+id/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_half_margin"
            android:layout_marginRight="@dimen/activity_horizontal_half_margin"
            android:layout_weight="2"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_drawable" />

        <TextView
            android:id="@+id/value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_half_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_text"
                style="@style/result_item_label"
                android:text="@string/n_result_format" />

            <TextView
                android:id="@+id/m_text"
                style="@style/result_item_label"
                android:text="@string/m_result_format" />

            <TextView
                android:id="@+id/mrd_text"
                style="@style/result_item_label"
                android:text="@string/mrd_result_format"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n_value"
                style="@style/result_item" />

            <TextView
                android:id="@+id/m_value"
                style="@style/result_item" />

            <TextView
                android:id="@+id/mrd_value"
                style="@style/result_item" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_half_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sd_label"
                style="@style/result_item_label"
                android:text="@string/result_format_sd" />

            <TextView
                android:id="@+id/fn_label"
                style="@style/result_item_label"
                android:text="@string/result_format_fn" />

            <TextView
                android:id="@+id/ty_label"
                style="@style/result_item_label"
                android:text="@string/result_format_ty" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sd_value"
                style="@style/result_item" />

            <TextView
                android:id="@+id/fh_value"
                style="@style/result_item" />

            <TextView
                android:id="@+id/ty_value"
                style="@style/result_item" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>