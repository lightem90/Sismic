<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollableLayout">

    <TextView
        style="@style/sectionTitle"
        android:text="@string/localization_sismic_riepilogue" />

    <LinearLayout style="@style/TextSummaryContainer">

        <TextView
            android:id="@+id/address"
            style="@style/TextSummary" />

        <TextView
            android:id="@+id/zona"
            style="@style/TextSummary" />

    </LinearLayout>


    <LinearLayout style="@style/TextSummaryContainer">

        <TextView
            android:id="@+id/vrif"
            style="@style/TextSummary" />

        <TextView
            android:id="@+id/cat_top"
            style="@style/TextSummary" />

        <TextView
            android:id="@+id/cat_suolo"
            style="@style/TextSummary" />

        <TextView
            android:id="@+id/q"
            style="@style/TextSummary" />

    </LinearLayout>

    <TextView
        style="@style/sectionTitle"
        android:text="@string/building_riepilogue" />

    <LinearLayout style="@style/TextSummaryContainer">

        <TextView
            android:id="@+id/peso_tot"
            style="@style/TextSummary" />

        <TextView
            android:id="@+id/h_tot"
            style="@style/TextSummary" />

        <TextView
            android:id="@+id/area_tot"
            style="@style/TextSummary" />

        <TextView
            android:id="@+id/pilastri_tot"
            style="@style/TextSummary" />

    </LinearLayout>

    <TextView
        style="@style/sectionTitle"
        android:text="@string/sismic_state_riepilogue" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/pillar_domain_state_chart"
        android:layout_width="match_parent"
        android:layout_height="500dp" />

    <TextView
        style="@style/sectionTitle"
        android:text="@string/media_riepilogue" />

    <TableLayout
        style="@style/scrollableLayout"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/grid_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/media_images_title" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/grid_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <GridView
                android:id="@+id/image_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:columnWidth="90dp"
                android:focusable="true"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />

        </TableRow>

        <TableRow
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/media_video_title" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/grid_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <GridView
                android:id="@+id/video_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:columnWidth="90dp"
                android:focusable="true"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/media_note_title" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/grid_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <GridView
                android:id="@+id/note_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:columnWidth="90dp"
                android:focusable="true"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/media_audio_title" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/grid_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <GridView
                android:id="@+id/audio_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:columnWidth="90dp"
                android:focusable="true"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </TableRow>

    </TableLayout>

</LinearLayout>