<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/scrollableLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/update_position_progressbar"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        style="@style/sectionTitle"
        android:text="@string/report_info_section_title"/>

    <!-- Compilati automaticamente all'apertura -->

    <com.polito.sismic.Presenters.CustomLayout.LabelReportLayout
        android:id="@+id/report_info_number_label"
        app:report_label_title="@string/report_info_number_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <com.polito.sismic.Presenters.CustomLayout.LabelReportLayout
        android:id="@+id/report_info_name_label"
        app:report_label_title="@string/report_info_name_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <com.polito.sismic.Presenters.CustomLayout.LabelReportLayout
        android:id="@+id/report_info_data_label"
        app:report_label_title="@string/report_info_data_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>


    <TextView
        style="@style/sectionTitle"
        android:text="@string/report_localization_section_title"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/lat_parameter"
        app:report_parameter_title="@string/report_latitute_parameter"
        app:report_parameter_hint="@string/report_latitute_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/long_parameter"
        app:report_parameter_title="@string/report_longitude_parameter"
        app:report_parameter_hint="@string/report_longitude_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/state_parameter"
        app:report_parameter_title="@string/report_state_parameter"
        app:report_parameter_hint="@string/report_state_parameter_hint"
        android:entries="@array/countries_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/region_parameter"
        app:report_parameter_title="@string/report_region_parameter"
        app:report_parameter_hint="@string/report_region_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/province_parameter"
        app:report_parameter_title="@string/report_province_parameter"
        app:report_parameter_hint="@string/report_province_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/comune_parameter"
        app:report_parameter_title="@string/report_comune_parameter"
        app:report_parameter_hint="@string/report_comune_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/address_parameter"
        app:report_parameter_title="@string/report_address_parameter"
        app:report_parameter_hint="@string/report_address_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/cap_parameter"
        app:report_parameter_title="@string/report_cap_parameter"
        app:report_parameter_hint="@string/report_cap_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/zona_sismica_parameter"
        app:report_parameter_title="@string/report_sismic_parameter"
        app:report_parameter_hint="@string/report_sismic_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.polito.sismic.Presenters.CustomLayout.ParameterReportLayout
        android:id="@+id/codice_istat_parameter"
        app:report_parameter_title="@string/report_istat_parameter"
        app:report_parameter_hint="@string/report_istat_parameter_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>